<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/back_dark_primary</item>
        <item name="colorPrimaryVariant">@color/back_dark_primary</item>
        <item name="colorOnPrimary">@color/back_dark_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/label_dark_secondary</item>
        <item name="colorSecondaryVariant">@color/label_dark_secondary</item>
        <item name="colorOnSecondary">@color/label_dark_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/back_dark_primary</item>
        <item name="recyclerViewStyle">@color/back_dark_secondary</item>
        <item name="cardViewStyle">@color/back_dark_secondary</item>
        <item name="android:textViewStyle">@color/label_dark_primary</item>
    </style>

    <style name="BrandedSwitch.control" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/color_dark_blue</item>
        <item name="colorSwitchThumbNormal">@color/back_dark_elevated</item>
    </style>

</resources>